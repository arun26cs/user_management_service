# Staging Environment Configuration Template
# Copy this file to .env.staging and update with your staging values

# =============================================================================
# DATABASE CONFIGURATION (Staging)
# =============================================================================
DB_HOST=staging-db-host
DB_PORT=5432
DB_NAME=user_management_staging_db
DB_USER=staging-db-user
DB_PASSWORD=staging-db-password-change-me

# =============================================================================
# KEYCLOAK CONFIGURATION (Staging)
# =============================================================================
KEYCLOAK_URL=https://auth-staging.yourdomain.com
KEYCLOAK_REALM=visionboard-backend
KEYCLOAK_CLIENT_ID=backend-client
KEYCLOAK_CLIENT_SECRET=uQmBRCf1VXJDDBhsFReHKy0mpZCG9NKM

# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=staging-admin-password-change-me

# =============================================================================
# APPLICATION CONFIGURATION (Staging)
# =============================================================================
SPRING_PROFILES_ACTIVE=staging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_VISIONBOARD=DEBUG

# JVM Options
JAVA_OPTS="-XX:MaxRAMPercentage=75.0 -XX:+UseG1GC -XX:+UseContainerSupport"

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================
DEBUG_MODE=true
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# =============================================================================
# MONITORING CONFIGURATION (Staging)
# =============================================================================
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECKS_ENABLED=true

# =============================================================================
# EXTERNAL SERVICES (Staging)
# =============================================================================
# TODO_SERVICE_URL=https://staging-api.yourdomain.com/todo-service
# NOTIFICATION_SERVICE_URL=https://staging-api.yourdomain.com/notification-service

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
CONTAINER_REGISTRY=your-registry.com/visionboard
IMAGE_TAG=staging-latest
K8S_NAMESPACE=visionboard-staging
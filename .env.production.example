# Production Environment Configuration Template
# Copy this file to .env.production and update with your production values

# =============================================================================
# DATABASE CONFIGURATION (Production)
# =============================================================================
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=user_management_db
DB_USER=your-production-db-user
DB_PASSWORD=your-secure-production-db-password

# =============================================================================
# KEYCLOAK CONFIGURATION (Production)
# =============================================================================
KEYCLOAK_URL=https://auth.yourdomain.com
KEYCLOAK_REALM=visionboard-backend
KEYCLOAK_CLIENT_ID=backend-client
KEYCLOAK_CLIENT_SECRET=uQmBRCf1VXJDDBhsFReHKy0mpZCG9NKM

# Keycloak Admin Credentials (for setup only)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-secure-admin-password

# =============================================================================
# APPLICATION CONFIGURATION (Production)
# =============================================================================
SPRING_PROFILES_ACTIVE=production
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_VISIONBOARD=INFO

# JVM Options (Production optimized)
JAVA_OPTS="-XX:MaxRAMPercentage=75.0 -XX:+UseG1GC -XX:+UseContainerSupport -XX:+HeapDumpOnOutOfMemoryError"

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================
# JWT signing key for additional security
JWT_SIGNING_KEY=your-production-jwt-signing-key

# Encryption secret for sensitive data
ENCRYPTION_SECRET=your-production-encryption-secret

# =============================================================================
# PERFORMANCE CONFIGURATION (Production)
# =============================================================================
# Database connection pool for production load
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000
DB_MAX_LIFETIME=1800000

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# MONITORING CONFIGURATION (Production)
# =============================================================================
# Application monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECKS_ENABLED=true

# External monitoring endpoints
# PROMETHEUS_ENDPOINT=http://prometheus:9090
# JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =============================================================================
# EXTERNAL SERVICES (Production)
# =============================================================================
# Other microservices URLs
# TODO_SERVICE_URL=https://api.yourdomain.com/todo-service
# NOTIFICATION_SERVICE_URL=https://api.yourdomain.com/notification-service

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Container registry
CONTAINER_REGISTRY=your-registry.com/visionboard
IMAGE_TAG=latest

# Kubernetes namespace
K8S_NAMESPACE=visionboard-production